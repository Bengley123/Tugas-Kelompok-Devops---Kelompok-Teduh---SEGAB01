<?xml version="1.0" encoding="UTF-8"?>
<project name="TUBES_PBO_Kelompok 9" default="default" basedir=".">
    <description>Builds, tests, and runs the project TUBES_PBO_Kelompok 9.</description>

    <!-- Define directories -->
    <property name="build.dir" value="build"/>
    <property name="build.classes.dir" value="${build.dir}/classes"/>
    <property name="build.test.dir" value="${build.dir}/test"/>
    <property name="dist.dir" value="dist"/>
    <property name="src.dir" value="src"/>
    <property name="test.dir" value="test"/>
    <property name="lib.dir" value="lib"/>

    <!-- Define classpath for the project -->
    <path id="project.class.path">
        <fileset dir="${lib.dir}">
            <include name="/*.jar"/>
        </fileset>
    </path>

    <!-- Define classpath for tests -->
    <path id="test.class.path">
        <path refid="project.class.path"/>
        <pathelement location="${build.classes.dir}"/>  <!-- Add main classes to test classpath -->
        <pathelement location="${build.test.dir}"/>     <!-- Add test classes -->
        <fileset dir="lib">
            <include name="mockito-core-5.14.2.jar"/> <!-- Add Mockito JAR here -->
        </fileset>
    </path>

    <path id="project.classpath">
        <fileset dir="lib">
            <include name="mysql-connector-j-9.1.0.jar"/>
            <include name="mockito-core-5.14.2.jar"/>
        </fileset>
        <pathelement location="build/classes"/>
        <pathelement location="build/test"/>
    </path>

    <!-- Import the NetBeans build implementation -->
    <import file="nbproject/build-impl.xml"/>

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>

    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.classes.dir}"/>
        <mkdir dir="${build.test.dir}"/>
        <mkdir dir="${dist.dir}"/>
    </target>

    <!-- Compile main sources -->
    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" 
               destdir="${build.classes.dir}" 
               includeantruntime="false"
               source="17" 
               target="17">
            <classpath refid="project.class.path"/>
        </javac>
    </target>

    <!-- Compile test sources -->
    <target name="compile-test" depends="compile">
        <javac srcdir="${test.dir}" 
               destdir="${build.test.dir}" 
               includeantruntime="false"
               source="17" 
               target="17">
            <classpath refid="test.class.path"/>
        </javac>
    </target>

    <!-- Run tests -->
    <target name="test" depends="compile-test">
        <junit printsummary="on" haltonfailure="true" fork="true">
            <classpath refid="test.class.path"/>
            <formatter type="plain" usefile="false"/> <!-- Print to console -->
            <batchtest>
                <fileset dir="${test.dir}">
                    <include name="/*Test.java"/>
                    <include name="/test.java"/>
                </fileset>
            </batchtest>
        </junit>
    </target>

    <target name="jar" depends="compile">
        <jar destfile="${dist.dir}/TUBES_PBO_Kelompok_9.jar" basedir="${build.classes.dir}"/>
    </target>

    <target name="default" depends="clean, compile, jar, test"/>
</project>